{#
/**
 * @file
 * Default teaser theme implementation for consumer orgs.
 *
 * @ingroup themeable
 */
#}
{%- set classes = [
  'node',
  'node--id-' ~ node.id,
  ('node--type-' ~ node.bundle)|clean_class,
  view_mode ? ('node--view-mode-' ~ view_mode)|clean_class
] -%}
{{ attach_library('ibm_apim/core') }}
{{ attach_library('consumerorg/basic') }}
<article id="node-{{ node.id }}" {{ attributes.addClass(classes) }} aria-label="{{ node.title[0].value }}">
  <div class="apicCOrgTeaser">
    <div class="apicCOrgTeaserMain">
      <h2>
        <a href="{{- path('entity.node.canonical', {'node': node.id}) -}}" rel="bookmark">
          <span class="apicCOrgName apicTruncate">{{- label -}}</span>
        </a>
      </h2>
      {% if custom_fields is defined and custom_fields is not empty %}
        <div class="customFields">
          {% for custom_field in custom_fields %}
            <div class="{{ custom_field|clean_class }}">
              {{ content[custom_field] }}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</article>
